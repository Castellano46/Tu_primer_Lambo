<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_image1"
            android:scaleType="centerCrop"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnExercise"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_exercise"
                    android:src="@drawable/ic_exercise"
                    android:scaleType="centerInside"
                    android:padding="16dp"
                    android:contentDescription="@string/ejercicio_button_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ejercicio"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnCalendar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_calendar"
                    android:src="@drawable/ic_calendar"
                    android:scaleType="centerInside"
                    android:padding="16dp"
                    android:contentDescription="@string/progreso_button_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progreso"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnAlarm"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/button_alarm"
                    android:src="@drawable/ic_alarm"
                    android:scaleType="centerInside"
                    android:padding="16dp"
                    android:contentDescription="@string/alarma_button_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarma"
                    android:textStyle="bold"
                    android:textColor="@color/lime_dark"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>
